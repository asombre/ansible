---
- hosts: 
    repositories
  gather_facts: no
  vars:
    repo_list:
      - vim
      - yum-utils
      - httpd
  tasks:
   - name: Set hostname
     hostname:
       name: xxxxxxxx.xxx.xxx

  - name: Create ISO directory
    file:
      path: /iso
      state: directory
      mode: '0755'

  - name: Create rhel repo directory
    file:
      path: /repo/rhel/9/
      state: directory
      mode: '0755'

  - name: Mount ISO
    mount:
      src: /root/rhel-9.4-x86_64-dvd.iso
      opts: ro,loop
      path: /iso
      fstype: iso9660
      state: ephemeral

  - name: Setup iso appstream repo
    yum_repository:
      name: AppStream
      description: rhel9.4 appstream
      baseurl: file:///iso/AppStream/
      mirrorlist: file:///iso/AppStream/
      file: localiso
      gpgcheck: no
      gpgkey: /etc/pki/rpm-gpg/RPM-GPG-KEY-redhat-release
      enabled: yes
      skip_if_unavailable: yes
      sslverify: no

  - name: Setup iso baseos repo
    yum_repository:
      name: BaseOS
      description: rhel9.4 baseos
      baseurl: file:///iso/BaseOS/
      mirrorlist: file:///iso/BaseOS/
      file: localiso
      gpgcheck: no
      gpgkey: /etc/pki/rpm-gpg/RPM-GPG-KEY-redhat-release
      enabled: yes
      skip_if_unavailable: yes
      sslverify: no

  - name: Install repo packages
    yum:
      name: "{{ item }}"
      state: present
      with_items:
        - yum-utils
        - vim
        - httpd

  - name: Start httpd
    service:
      name: httpd
      enabled: true
      state: started

  - name: enable firewall http
    firewalld:
      zone: public
      service: http
      permanent: true
      state: enabled

  - name: reload firewalld
    service:
      name: firewalld
      state: reloaded

  - name: placeholder for selinux
    debug:
      msg:
        - "chown -R apache:apache dir"
        - "setenforce 0"
        - "semanage fcontext -a -t httpd_sys_context_t 'dir(/.*)?'"
        - "restorecon -v -R 'dir/'"
        - "setenforce 1"

  - name: Create shutdown script 1
    lineinfile:
      path: /root/powerdown.sh
      line: "#!/bin/bash"
      create: yes

  - name: Create shutdown script 2
    lineinfile:
      path: /root/powerdown.sh
      line: "umount /iso; poweroff"
      create: yes

  - name: Create script
    file:
      path: /root/powerdown.sh
      mode: '0700'
      state: file

  - name: Final messages
    debug:
      msg:
        - "http://x.x.x.x/dir"
        - "Done"

